    <title>Feladat</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0;
            padding: 0;
        }

        .counter-container, .shopping-list-container {
            border: 1px solid red;
            padding: 20px;
            margin: 20px;
            width: 300px;
            text-align: center;
            background-color:indianred;
        }

        .counter-buttons {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        input {
            padding: 10px 20px;
        }
